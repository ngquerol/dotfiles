## Basic settings
set realname                = "Nicolas Gaulard Querol"
set hostname                = "gmail.com"
my_hdr                      From: Nicolas G. Querol <nicolas.gquerol@gmail.com>
set use_envelope_from
set envelope_from_address   = "nicolas.gquerol@gmail.com"
set header_cache            = "~/.mutt/cache/headers"
set message_cachedir        = "~/.mutt/cache/bodies"

## SMTP configuration
set smtp_url  = "smtp://nicolas.gquerol@smtp.gmail.com:587/"

## IMAP configuration
set folder                  = "imaps://imap.gmail.com:993"
set spoolfile               = "+INBOX"
set imap_user               = "nicolas.gquerol@gmail.com"
set imap_authenticators     = "login"
set imap_check_subscribed   = "yes"
set imap_list_subscribed    = "yes"
set imap_keepalive          = 900
set trash                   = "+[Gmail]/Corbeille"
set postponed               = "+[Gmail]/Brouillons"
set record                  = "+[Gmail]/Messages envoyés"

mailboxes !

## Abook
set query_command   = "abook --mutt-query '%s'"
macro index,pager   a "<pipe-message>abook --add-email-quiet<return>" "Ajouter cet expéditeur dans Abook"

## Mailing lists
subscribe awesome@naquadah.org

## How often we should check for new mail
set mail_check  = 300
set timeout     = 30

## Various tweaks
set move         = "no"
set fast_reply
set copy         = "no"
set signature    ='~/.mutt/signature.txt'
set mailcap_path ='~/.mutt/mailcap'

# Delete without confirmation
set delete = "yes"

# Source the remaining parts of the configuration
source ~/.mutt/colors
source ~/.mutt/display
source ~/.mutt/sidebar
source ~/.mutt/keys
source ~/.mutt/secret
